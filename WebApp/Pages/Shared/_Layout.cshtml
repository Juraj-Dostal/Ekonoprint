<!DOCTYPE html>
<html lang="sk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ekonoprint.sk</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/images/Favicon32_v2.png"/>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/images/Logo_v2.png" alt="Logo" width="100" height="auto"/>
                </a>
                <button class="navbar-toggler navbar-light" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                @{
                    string currentPage = ViewContext.RouteData.Values["Page"]?.ToString() ?? "";
                }

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Index" ? "active" : "")" asp-area="" asp-page="/Index">Úvod</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/AboutUs" ? "active" : "")" asp-area="" asp-page="/AboutUs">O nás</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Publisher" ? "active" : "")" asp-area="" asp-page="/Publisher">Vydavateľstvo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Printer" ? "active" : "")" asp-area="" asp-page="/Printer">Kníh tlač</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Marketing" ? "active" : "")" asp-area="" asp-page="/Marketing">Marketing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Contact" ? "active" : "")" asp-area="" asp-page="/Contact">Kontakt</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="flex-fill my-4">
            @RenderBody()
        </main>
    </div>


    <footer class="footer mt-auto">
        <div class="container">
            <div class="row align-items-center flex-col flex-md-row">
                
                <div class="col flex-col flex-md-row justify-content-md-start text-center text-md-start">
                    <ul class="nav navbar ">
                        <li class="col col-12 col-md nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Úvod</a>
                        </li>
                        <li class="col col-12 col-md nav-item">
                            <a class="nav-link" asp-area="" asp-page="/AboutUs">O nás</a>
                        </li>
                        <li class="col col-12 col-md  nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Publisher">Vydavateľstvo</a>
                        </li>
                        <li class="col col-12 col-md  nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Printer">Kníh tlač</a>
                        </li>
                        <li class="col col-12 col-md nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Marketing">Marketing</a>
                        </li>
                        <li class="col col-12 col-md nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Contact">Kontakt</a>
                        </li>
                    </ul>
                </div>
                
                <div class="col text-center d-flex justify-content-center justify-content-md-end ">
                    <p class="mb-auto">&copy; @DateTime.Now.Year - Ekonoprint.sk</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>