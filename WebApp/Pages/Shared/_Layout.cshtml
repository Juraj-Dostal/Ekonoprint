<!DOCTYPE html>
<html lang="sk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ekonoprint.sk</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/images/Favicon16.png"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="~/images/Logo.png" alt="Logo" width="100" height="auto" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Úvod</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/AboutUs">O nás</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Publisher">Vydavateľstvo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Marketing">Marketing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Contact">Kontakt</a>
                        </li>
                    </ul>
                </div>
                <div class="nav-item">
                    <button id="theme-toggle" class="btn btn-link nav-link" title="Change theme">
                        <img id="theme-image-sun" src="~/images/sun.png" alt="Theme mode" width="20" height="auto" />
                        <img id="theme-image-moon" src="~/images/moon.png" alt="Theme mode" width="25" height="auto" />
                    </button>
                </div>
                <script>
                    const btn = document.getElementById('theme-toggle');
                    const img_sun = document.getElementById('theme-image-sun');
                    const img_moon = document.getElementById('theme-image-moon');
                    const html = document.documentElement;
                    let current = localStorage.getItem('theme-mode') || html.style.colorScheme || 'light';

                    function applyTheme(mode) {
                        if (mode === 'dark') {
                            html.style.colorScheme = 'dark';
                            img_sun.hidden = false;
                            img_moon.hidden = true;
                        } else {
                            html.style.colorScheme = 'light';
                            img_sun.hidden = true;
                            img_moon.hidden = false;
                        }
                        localStorage.setItem('theme-mode', mode);
                    }

                    btn.addEventListener('click', () => {
                        current = (current === 'light') ? 'dark' : 'light';
                        applyTheme(current);
                    });

                    applyTheme(current);
                </script>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="col">
                    <ul class="nav navbar">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Úvod</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/AboutUs">O nás</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Publisher">Vydavateľstvo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Marketing">Marketing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Contact">Kontakt</a>
                        </li>
                    </ul>
                </div>
                <div class="col d-flex  justify-content-end mx-auto">
                    <p class="mb-0">&copy; @DateTime.Now.Year - Ekonoprint.sk</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>